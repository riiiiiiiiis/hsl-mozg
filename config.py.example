# IMPORTANT: All configuration is now managed through environment variables.
# For local development, create a .env file in the root directory
# and add your variables there. The .env file is ignored by git.
#
# Example .env file:
#
# DATABASE_URL="postgresql://user:password@host:port/dbname"
# BOT_TOKEN="YOUR_TELEGRAM_BOT_TOKEN_HERE"
# TARGET_CHAT_ID=0
# ADMIN_CONTACT="@your_admin"
# TBANK_CARD_NUMBER="1234..."
# ... etc.

BOT_TOKEN = "YOUR_TELEGRAM_BOT_TOKEN_HERE"
PERSISTENCE_FILEPATH = "./bot_context_persistence"
ADMIN_CONTACT = "@your_admin_contact_or_link"

# Payment details for different currencies
# T-Bank (RUB)
TBANK_CARD_NUMBER = "1234 5678 9012 3456"
TBANK_CARD_HOLDER = "Имя Фамилия"

# Kaspi (KZT)
KASPI_CARD_NUMBER = "1234 5678 9012 3456"

# Argentina (ARS)
ARS_ALIAS = "your.alias.here"

# Crypto (USDT)
USDT_TRC20_ADDRESS = "YOUR_USDT_TRC20_WALLET_ADDRESS_HERE"
CRYPTO_NETWORK = "TRC-20"
BINANCE_ID = "123456789"

# Exchange rates (update regularly)
USD_TO_RUB_RATE = 90.0
USD_TO_KZT_RATE = 450.0
USD_TO_ARS_RATE = 1000.0

# ID чата для отправки уведомлений администратору
TARGET_CHAT_ID = 0 # Замените на ID вашего чата (должно быть числом, например -1001234567890)